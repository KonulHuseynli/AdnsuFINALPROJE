@using UniversityProject.Models
@model TeamMembers
<div class="col-lg-12 grid-margin ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Member Details</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>StudentCardId</th>
                            <th>Name</th>
                            <th>BookName</th>
                            <th>CreateDate</th>
                            <th>DeadLine</th>
                            <th>Status</th>


                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.StudentCardId</td>
                            <td>@Model.Name</td>
                            <td>@Model.BookName</td>
                            <td>@Model.CreateDate.ToString("dd/MM/yyyy")</td>
                            <td>@Model.DeadLine.ToString("dd/MM/yyyy")</td>
                            <td>@Model.Profession</td>

                        </tr>
                    </tbody>
                </table>
                <a asp-action="index" asp-controller="teammember" class="btn btn-info">Cancel</a>
            </div>
        </div>
    </div>
</div>