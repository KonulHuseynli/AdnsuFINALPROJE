@using UniversityProject.Models
@model TeamMembers
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
             <div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  
                  <p class="card-description">
                    Add  Member
                  </p>
                  <form method="post" asp-action="create" asp-controller="teammember" asp-area="admin" class="forms-sample">
                    <div class="form-group">
                                <label asp-for="StudentCardId">StudentCardId</label>
                                <input class="form-control" asp-for="StudentCardId">
                                <span asp-validation-for="StudentCardId"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Name">Student Name</label>
                      <input  class="form-control" asp-for="Name">
                      <span asp-validation-for="Name"></span>
                    </div>
                            <div class="form-group">
                                <label asp-for="CreateDate">CreateDate</label>
                                <input class="form-control" asp-for="CreateDate">
                                <span asp-validation-for="CreateDate"></span>
                            </div>                    
                            <div class="form-group">
                                <label asp-for="DeadLine">DeadLine</label>
                                <input class="form-control" asp-for="DeadLine">
                                <span asp-validation-for="DeadLine"></span>
                            </div>                    
                            <div class="form-group">
                                <label asp-for="BookName">BookName</label>
                                <input class="form-control" asp-for="BookName">
                                <span asp-validation-for="BookName"></span>
                            </div>
                    <div class="form-group">
                      <label asp-for="Profession">Status</label>
                      <input class="form-control" asp-for="Profession">
                      <span asp-validation-for="Profession"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                  </form>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}