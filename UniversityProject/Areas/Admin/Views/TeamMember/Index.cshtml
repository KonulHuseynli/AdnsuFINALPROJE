@using UniversityProject.Areas.Admin.ViewModels
@model TeamMemberIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Products</h4>
                        <a class="btn btn-success" asp-action="create" asp-controller="teammember" asp-area="admin">Add Member</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>StudentCardId</th>
                                        <th>Name</th>
                                        <th>BookName</th>
                                        <th>CreateDate</th>
                                        <th>DeadLine</th>
                                        <th>Status</th>

                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in Model.teamMembers)
                                    {
                                        <tr>
                                            <td>@member.Id</td>
                                            <td>@member.StudentCardId</td>
                                            <td>@member.Name</td>
                                            <td>@member.BookName</td>
                                            <td>@member.CreateDate</td>
                                            <td>@member.DeadLine</td>
                                            <td>@member.Profession</td>


                                            <td >

                                                <a class="btn btn-primary " asp-action="update" asp-controller="teammember" asp-area="admin" asp-route-id=@member.Id>Update</a>
                                                <a class="btn btn-primary btn-danger " asp-action="delete" asp-controller="teammember" asp-area="admin" asp-route-id=@member.Id>Delete</a>
                                                <a class="btn btn-warning btn-details " asp-action="details" asp-controller="teammember" asp-area="admin" asp-route-id=@member.Id>Details</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>